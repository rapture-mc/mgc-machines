{
  "module": {
    "megacorp-deploy-servers": {
      "autostart": true,
      "bridge": "br0",
      "dhcp": true,
      "index_start": 2,
      "memory": "4096",
      "memory": "6144",
      "source": "git::https://gitea.megacorp.industries/megacorp/terraform-libvirt-module.git",
      "system_volume": 300,
      "vcpu": 2,
      "vm_count": 1,
      "vm_hostname_prefix": "MGC-DRS-"
    },
    "megacorp-grafana-servers": {
      "autostart": true,
      "bridge": "br0",
      "dhcp": true,
      "memory": "4096",
      "source": "git::https://gitea.megacorp.industries/megacorp/terraform-libvirt-module.git",
      "system_volume": 300,
      "vcpu": 2,
      "vm_count": 1,
      "vm_hostname_prefix": "MGC-GRF-"
    }
  },
  "provider": {
    "libvirt": {
      "uri": "qemu+ssh://deploy@mgc-hvs-01/system"
    }
  },
  "terraform": {
    "required_providers": {
      "libvirt": {
        "source": "dmacvicar/libvirt"
      }
    }
  }
}
